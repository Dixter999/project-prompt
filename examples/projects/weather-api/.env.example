# Sample environment file for Weather API Client
# Copy this file to .env and add your API key

# OpenWeather API key
OPENWEATHER_API_KEY=your_api_key_here

# Units for temperature (metric, imperial, standard)
DEFAULT_UNITS=metric

# Default city for quick lookup
DEFAULT_CITY=London

# Cache settings
ENABLE_CACHE=true
CACHE_EXPIRY=1800

# Request timeout in seconds
REQUEST_TIMEOUT=10
