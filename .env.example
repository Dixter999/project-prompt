# ProjectPrompt Configuration
# Copy this file to .env and add your API keys

# AI Provider (choose one)
ANTHROPIC_API_KEY=your_anthropic_key_here
# OPENAI_API_KEY=your_openai_key_here

# Optional: Logging level
LOG_LEVEL=info

# Scanning Configuration
PROJECT_PROMPT_SCAN_MAX_FILE_SIZE=10485760  # 10MB in bytes
PROJECT_PROMPT_SCAN_MAX_FILES=10000
PROJECT_PROMPT_SCAN_ANALYZE_CONTENT=true
PROJECT_PROMPT_SCAN_CONTENT_PREVIEW_LENGTH=500
PROJECT_PROMPT_SCAN_FOLLOW_SYMLINKS=false
PROJECT_PROMPT_SCAN_HIDDEN_FILES=false

# Analysis Configuration  
PROJECT_PROMPT_ANALYSIS_MAX_CONTEXT_LENGTH=8000
PROJECT_PROMPT_ANALYSIS_FUNCTIONALITY_DETECTION=true
PROJECT_PROMPT_ANALYSIS_FUNCTIONALITY_THRESHOLD=0.6
PROJECT_PROMPT_ANALYSIS_IMPORTANCE_SCORING=true
PROJECT_PROMPT_ANALYSIS_MAX_IMPORTANT_FILES=20
PROJECT_PROMPT_ANALYSIS_INCLUDE_CONTENTS=true
PROJECT_PROMPT_ANALYSIS_MAX_CONTEXT_FILES=10

# Export Configuration
PROJECT_PROMPT_EXPORT_FORMAT=json  # json, yaml, markdown, html
PROJECT_PROMPT_EXPORT_INCLUDE_ANALYSIS=true
PROJECT_PROMPT_EXPORT_INCLUDE_CONTENTS=false
PROJECT_PROMPT_EXPORT_PRETTY_FORMAT=true
